{
  "name": "@pragmasoft-ukraine/kite-chat-component",
  "description": "kite-chat web component",
  "license": "LGPL3.0",
  "author": "Dmytro V. Zemnytskyi <pragmasoft@gmail.com>",
  "version": "2023.10.7",
  "homepage": "https://www.k1te.chat/",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pragmasoft-ua/kite-chat-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/pragmasoft-ua/kite-chat-frontend/issues"
  },
  "keywords": [
    "kite",
    "chat",
    "webchat",
    "livechat",
    "support",
    "Ukraine",
    "web-components",
    "lit"
  ],
  "files": [
    "dist",
    "types",
    "README.md",
    "custom-elements.json"
  ],
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "exports": "./dist/index.js",
  "customElements": "custom-elements.json",
  "sideEffects": [
    "./src/kite-chat.ts",
    "./src/kite-msg.ts"
  ],
  "type": "module",
  "module": "dist/index.js",
  "scripts": {
    "start": "vite --host",
    "build": "concurrently \"pnpm:tsc\" \"pnpm:build:*\" \"pnpm:analyze\"",
    "tsc": "tsc -b",
    "build:module": "vite build",
    "build:bundle": "vite build -c vite.bundled.config.ts",
    "clean": "rimraf dist types tsconfig.tsbuildinfo custom-elements.json",
    "lint": "pnpm run lint:lit-analyzer && pnpm run lint:eslint",
    "lint:eslint": "eslint \"src/**/*.ts\"",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "analyze": "wca analyze \"src/index.ts\" --format json --outFile custom-elements.json",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "bundle-visualizer": "vite-bundle-visualizer"
  },
  "dependencies": {
    "@oddbird/popover-polyfill": "^0.3.1",
    "@open-wc/scoped-elements": "^3.0.3",
    "@romanenko-dev/simple-timestamp": "^1.0.7",
    "@webcomponents/scoped-custom-element-registry": "^0.0.9",
    "cssnano": "^6.0.1",
    "html2canvas": "^1.4.1",
    "lit": "^3.1.1",
    "nanoid": "^4.0.2",
    "pretty-bytes": "^6.1.1"
  },
  "devDependencies": {
    "lit-analyzer": "^2.0.1",
    "postcss-loader": "^7.0.1",
    "ts-lit-plugin": "^1.2.1",
    "web-component-analyzer": "^2.0.0"
  }
}
