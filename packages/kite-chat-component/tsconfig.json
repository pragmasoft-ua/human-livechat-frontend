{
  "compilerOptions": {
    "composite": true,
    "outDir": "./types",
    "rootDir": "./src",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-missing-import": "off",
          "no-invalid-css": "off",
        }
      }
    ]
  },
  "extends": "../../tsconfig.json",
  "include": ["./src"],
  "exclude": ["./src/**/*.stories.ts"]
}
