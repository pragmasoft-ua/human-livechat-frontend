{
  "name": "@pragmasoft-ukraine/kite-chat-docs",
  "description": "kite-chat docs",
  "license": "LGPL3.0",
  "author": "Dmytro V. Zemnytskyi <pragmasoft@gmail.com>",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "dev": "astro dev",
    "dev:test": "NODE_ENV=test astro dev",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "build": "rimraf ./dist && npm run copy:elements && NODE_ENV=production astro build",
    "build:test": "rimraf ./dist/test && ([ -d public ] || mkdir public) && npm run copy:module && npm run copy:elements && NODE_ENV=test astro build",
    "preview": "astro preview",
    "copy:elements": "cp ../kite-chat-component/custom-elements.json ./src/content/customElements/kite-chat.json",
    "copy:module": "cp ../kite-chat-component/dist/kite-chat-component.mjs ./public/kite-chat-component.js && cp ../kite-chat/dist/kite-chat.js ./public/kite-chat.js"
  },
  "dependencies": {
    "@pragmasoft-ukraine/kite-chat": "*"
  },
  "devDependencies": {
    "@astrojs/lit": "^3.0.1",
    "@astrojs/starlight": "^0.11.1",
    "@astrojs/starlight-tailwind": "^2.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@astrojs/ts-plugin": "^1.1.3",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "astro": "^3.0.6",
    "autoprefixer": "^10.4.16",
    "lit": "^2.8.0",
    "postcss": "^8.4.29",
    "sharp": "^0.32.5",
    "tailwindcss": "^3.3.3"
  }
}
