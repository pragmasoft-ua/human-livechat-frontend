<script is:inline>
	window.addEventListener('theme-change', (event) => {
		kiteThemeChange(event.detail.theme);
	})

	const kiteThemeChange = (mode) => {
        const kiteChatElements = document.querySelectorAll('kite-chat');
        for (const kiteChat of kiteChatElements) {
            kiteChat.setAttribute('theme', mode);
        }
	};   
</script>